#!/bin/sh -e

##########################################################################
#   Script description:
#       
#   Arguments:
#       
#   Returns:
#       
#   History:
#   Date        Name        Modification
#   2015-01-04  Jason Bacon Begin
##########################################################################

usage()
{
    printf "Usage: $0 \n"
    exit 1
}


##########################################################################
#   Main
##########################################################################

if [ $# != 1 ]; then
    usage
fi

##########################################################################
#   Every script must have a usage function
##########################################################################

for file in */Scripts/*;do
    awk '$2 == "\"Usage:"' $file | \
	sed -e "s|\$0|$(basename $file)|g" \
	    -e 's|printf "Usage:||' \
	    -e 's|\\n"||'
done

